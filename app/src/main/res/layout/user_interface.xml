<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp" tools:ignore="MissingConstraints">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/tile_user">
            <TextView
                    android:text="ROOM"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_room" android:textSize="18sp"
                    android:textAlignment="center" android:textColor="@android:color/holo_blue_light"/>
            <TextView
                    android:text="ID XE"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_idxe" android:textAlignment="center"
                    android:textSize="18sp" android:textColor="@android:color/holo_blue_light"/>
            <TextView
                    android:text="TIME"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_time" android:textSize="18sp"
                    android:textAlignment="center" android:textColor="@android:color/holo_blue_light"/>
            <TextView
                    android:text="COST"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_cost" android:textAlignment="center"
                    android:textColor="@android:color/holo_blue_light" android:textSize="18sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/value_table">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_sroom" tools:text="ROOM"
                    android:textAlignment="center" android:textSize="18sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_sidxe" tools:text="ID XE"
                    android:textAlignment="center" android:textSize="18sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_stime" tools:text="TIME"
                    android:textAlignment="center"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_scost" tools:text="COST"
                    android:textAlignment="center"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>